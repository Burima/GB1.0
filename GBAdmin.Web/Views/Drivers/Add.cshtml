@model GBAdmin.Web.Models.DriverViewModel
@{
    ViewBag.Title = "Add Driver";
}
<style>
    .attached-with{
        font-size:20px;
        padding-bottom:7%;
    }
    .attached-with label{
        font-weight:normal;
    }
    .attached-with input[type=checkbox]{
        height:20px;
        width:20px;
            margin-left: 5%;
    }
</style>
<div class="row  border-bottom white-bg dashboard-header">
    <div class="col-sm-9">
        <div class="row">
            <div class="col-sm-8">
                <h3 class="m-t-none m-b">Add new driver</h3>
                @using (Ajax.BeginForm("Add", "Drivers", new { ReturnUrl = ViewBag.ReturnUrl }, new AjaxOptions() { OnBegin = "addDriverBegin", OnSuccess = "addDriverSuccess", OnFailure = "addDriverFailed", HttpMethod = "Post" }, new { role = "form", id = "form-SignUp", autocomplete = "off" }))
                {

                    @Html.AntiForgeryToken();

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control charAlone", maxlength = "50", placeholder = "First Name", tabIndex = "2" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control charAlone", maxlength = "50", placeholder = "Last Name", tabIndex = "3" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control numbersAlone", maxlength = "10", placeholder = "Phone Number", tabIndex = "1" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Pincode, new { @class = "form-control numbersAlone", maxlength = "6", placeholder = "Pincode", tabIndex = "1" })
                    </div>
                    <div class="form-group">
                        <select class="form-control" name="LicenceType">
                            <option disabled selected="selected">Licence Type</option>
                            <option value="1">LMV</option>
                            <option value="2">LMV-NT</option>
                            <option value="3">LMV-TR</option>
                            <option value="4">HMV</option>
                            <option value="5">HPMV</option>
                            <option value="6">HGMV</option>
                            <option value="7">LMN-CAB</option>
                            <option value="8">NA</option>                            
                        </select>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.LicenceNo, new { @class = "form-control", maxlength = "50", placeholder = "Licence No", tabIndex = "1" })
                    </div>
                    <div class="form-group">
                        <select class="form-control" name="ExperienceInKolkata">
                            <option disabled selected="selected">Experience In Kolkata</option>
                            @for (int i = 0; i <= 30; i++)
                            {
                                <option value=@i>@i</option>
                            }
                        </select>
                    </div>
                    <div class="form-group attached-with">
                       <div class="col-xs-4">
                           @Html.LabelFor(m => m.Uber)  @Html.CheckBoxFor(m => m.Uber, new { })
                       </div> 
                        <div class="col-xs-4">
                            @Html.LabelFor(m => m.Ola)  @Html.CheckBoxFor(m => m.Ola, new { })
                        </div> 
                        <div class="col-xs-4">
                            @Html.LabelFor(m => m.Tfs) @Html.CheckBoxFor(m => m.Tfs, new { })
                        </div>                     
                    </div>
                    
                    <div class="form-group">
                        <div class="btn-group-justified">
                            <input type="submit" class="btn btn-primary full-width" value="Add Driver">
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $(".numbersAlone").on("keyup keydown keypress", function (event) { return isNumberKey(event); });
            $(".charAlone").on(" keydown ", function (event) { return isCharField(event); });
        })
        function addDriverBegin() {

        }
        function addDriverSuccess() {

        }
        function addDriverFailed() {

        }
    </script>
    
}